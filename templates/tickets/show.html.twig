{% extends 'base.html.twig' %}

{% block title %}Tickets{% endblock %}

{% block body %}
    <h1>Tickets</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ ticket.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ ticket.content }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tickets_index') }}">back to list</a>

    <a href="{{ path('tickets_edit', {'id': ticket.id}) }}">edit</a>

    {{ include('tickets/_delete_form.html.twig') }}

    <h2>message</h2>

    {% for message in messages %}
        {% if message.ticketAssign.id == ticket.id %}
            <h3>{{ message.content }}</h3>
            by {{ message.messageAuthor.username }}
            <a href="{{ path('messages_edit', {'id': message.id}) }}">edit</a>
            {{ include('messages/_delete_form.html.twig') }}
        {% endif %}
    {% endfor %}
    {{ include('messages/_form.html.twig') }}
{% endblock %}
